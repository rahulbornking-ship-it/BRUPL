{
  "name": "babua-lms",
  "version": "1.0.0",
  "description": "Pattern-centric, free-to-learn engineering platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "lms",
    "dsa",
    "patterns",
    "learning"
  ],
  "author": "Babua LMS",
  "license": "MIT"
}
